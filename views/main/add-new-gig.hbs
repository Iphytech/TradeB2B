<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="overview">
        <h2 class="text-center"> Enter your gig details</h2>
        <br/>
        <div class="new-gig-card">
          <form method="post">
            <div class="form-group">
              <label> Gig title</label>
              <input type="text" class="form-control" placeholder="I will do somthing for you" name="gig_title">
            </div>
            <div class="form-group">
              <label> Gig price</label>
              <input type="text" class="form-control" placeholder="#300" name="gig_price">
            </div>
            <div class="form-group">
              <label> Gig category</label>
              <select class="form-control" name="gig_category">
                <option>Programming</option>
                <option>Website</option>
                <option>Design</option>
              </select>
            </div>
            <div class="form-group input-group-lg">
              <label> Gig about</label>
              <input type="text" class="form-control" placeholder="describe your gig" name="gig_about">
            </div>
            <button type="sumbit" class="btn btn-success btn-lg">Submit</button>
          </form>
        </div>
      </div>
    </div>

  </div>
